{
    "compilerOptions": {
      "target": "es2020",
      "module": "es6",
      "outDir": "dist",
      "noImplicitAny": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "rootDirs": ["src", "tests"],
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"]
      },
      "plugins": [
        {
          "transform": "typescript-transform-paths"
        }
      ]
    },
    "include": ["src", "tests"],
    "ts-node": {
        "esm": true,
    }
  }